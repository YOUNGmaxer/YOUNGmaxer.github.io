{{#if resume.publications.length}}
<section id="publications" class="flex flex-wrap border-t border-dashed border-gray-500 mt-2 pt-2">
	<h2 class="text-xl font-bold w-full pb-2 {{#lang 'zh'}}md:w-16 md:pb-0 print:w-16 print:pb-0{{/lang}}">{{i18n 'publications'}}</h2>
	<div class="wrap">
		{{#each resume.publications}}
		<div class="{{#unless @first}}mt-2{{/unless}}">
			{{#if name}}
			<span class="inline-block w-full md:w-48 print:w-48 font-bold">
				{{name}}
			</span>
			{{/if}}
			{{#if publisher}}
			<span class="inline-block w-full md:w-48 print:w-48">
				{{publisher}}
			</span>
			{{/if}}
			{{#if releaseDate}}
			<span class="inline-block w-full md:w-40 print:w-40">
				{{releaseDate}}
			</span>
			{{/if}}
			{{#if website}}
			<span class="website">
				<a class="hover:underline hover:text-blue-500" href="{{website}}">{{i18n 'link'}}</a>
			</span>
			{{/if}}
			{{#if summary}}
			<div class="mt-1">
				<p>{{summary}}</p>
			</div>
			{{/if}}
		</div>
		{{/each}}
	</div>
</section>
{{/if}}